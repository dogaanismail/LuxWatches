@model IEnumerable<MvcApplication1.Models.Product>

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2>Admin</h2>

<p>
    @Html.ActionLink("Create New", "ProductCreate")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.product_id)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.product_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_describe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_datetime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_discount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.brand_id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.product_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_price) $
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_describe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_photo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_datetime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_discount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brand_id)
        </td>
        <td>
            @Html.ActionLink("Edit Product", "ProductEdit", new { id=item.product_id })  |
            @Html.ActionLink("Delete Product", "ProductDelete", new { id = item.product_id }, new { onclick = "return confirm('Are you sure you wish to delete this product?');" })  | 
            @Html.ActionLink("Photos", "ProductPhoto", new { id = item.product_id}) 
        </td>
    </tr>
   
}

</table>
