				<script src="@Url.Content("~/Content/bootstrap-3.3.7-dist/js/responsiveslides.min.js")"></script>
			 <script>
			    // You can also use "$(window).load(function() {"
			    $(function () {
			      // Slideshow 4
			      $("#slider4").responsiveSlides({
			        auto: true,
			        pager: true,
			        nav: true,
			        speed: 500,
